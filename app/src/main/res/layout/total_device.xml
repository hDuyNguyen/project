<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        android:layout_marginBottom="6dp"
        android:gravity="center"
        android:text="Tra cứu thiết bị"
        android:textColor="#000"
        android:textSize="25sp"
        android:textStyle="bold" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="30dp">
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_home_border"
            android:text="Tổng"/>
    </LinearLayout>

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="30dp"
        android:rowCount="3"
        android:columnCount="2">

        <!-- Item 1 -->
        <LinearLayout
            android:id="@+id/device_1"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_selector">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:shapeAppearanceOverlay="@style/cycle"
                android:src="@drawable/images"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thiết bị 1"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Item 2 -->
        <LinearLayout
            android:id="@+id/device_2"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginBottom="10dp"
            android:background="@drawable/layout_selector">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:shapeAppearanceOverlay="@style/cycle"
                android:src="@drawable/images"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thiết bị 2"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Item 3 -->
        <LinearLayout
            android:id="@+id/device_3"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:background="@drawable/layout_selector">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:shapeAppearanceOverlay="@style/cycle"
                android:src="@drawable/images"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thiết bị 3"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Item 4 -->
        <LinearLayout
            android:id="@+id/device_4"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:background="@drawable/layout_selector">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:shapeAppearanceOverlay="@style/cycle"
                android:src="@drawable/images"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thiết bị 4"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Item 5 -->
        <LinearLayout
            android:id="@+id/device_5"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginEnd="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_selector">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                app:shapeAppearanceOverlay="@style/cycle"
                android:src="@drawable/images"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thiết bị 5"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>

        <!-- Item 6 -->
        <LinearLayout
            android:id="@+id/device_6"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_rowWeight="1"
            android:layout_columnWeight="1"
            android:orientation="vertical"
            android:padding="8dp"
            android:gravity="center"
            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/layout_selector">

            <com.google.android.material.imageview.ShapeableImageView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="2"
                android:paddingLeft="30dp"
                android:paddingRight="20dp"
                app:shapeAppearanceOverlay="@style/cycle"
                android:src="@drawable/images"
                android:scaleType="centerCrop"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Thiết bị 6"
                android:textSize="16sp"
                android:textColor="#000"/>
        </LinearLayout>
    </GridLayout>
</LinearLayout>